# متغيرات البيئة - نظام إدارة لاند سبايس

# ========= قاعدة البيانات =========
# PostgreSQL connection string
# لـ Local development: postgresql://username:password@localhost:5432/landspace_db
# لـ Production: استخدم الـ URL من مزود الخدمة
DATABASE_URL="postgresql://landspace_user:password@localhost:5432/landspace_db"

# ========= NextAuth.js =========
# Secret key لتشفير JWT tokens (استخدم: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# URL الأساسي للتطبيق
NEXTAUTH_URL="http://localhost:3000"

# ========= الأمان =========
# Salt rounds لـ bcrypt (القيمة الافتراضية: 12)
BCRYPT_SALT_ROUNDS=12

# JWT Encryption key
JWT_SECRET="your-jwt-secret-key-here"

# ========= رفع الملفات =========
# مجلد رفع الملفات (الشعارات، التصاميم، المستندات)
UPLOAD_PATH="/uploads"

# الحد الأقصى لحجم الملف (بالبايت) - افتراضي: 5MB
MAX_FILE_SIZE=5242880

# ========= البريد الإلكتروني =========
# SMTP configuration للإشعارات
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ========= الإشعارات =========
# WhatsApp API (اختياري)
WHATSAPP_API_TOKEN=""
WHATSAPP_PHONE_NUMBER=""

# SMS API (اختياري)
SMS_API_KEY=""
SMS_API_SECRET=""

# ========= API Keys خارجية =========
# Google Maps API (للعناوين)
GOOGLE_MAPS_API_KEY=""

# ========= التطوير =========
# Node environment
NODE_ENV="development"

# Debug mode
DEBUG=true

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# ========= الأداء =========
# Redis للـ Caching (اختياري)
REDIS_URL="redis://localhost:6379"

# Session timeout (بالثواني) - افتراضي: 24 ساعة
SESSION_TIMEOUT=86400

# ========= البنك =========
# API configuration للتكامل مع البنك (سيتم تحديدها لاحقاً)
BANK_API_URL=""
BANK_API_KEY=""
BANK_API_SECRET=""

# ========= الموردين =========
# API configuration للتكامل مع الموردين (سيتم تحديدها لاحقاً)
SUPPLIER_API_URL=""
SUPPLIER_API_KEY=""
